{% extends "base.html.twig" %}

{% block title %}Liste des Employers{% endblock %}
        

{% block body %}
    <div class="row">
        <div class='col-lg-3'></div>
        <div class='col-lg-6'><h1>Liste des Employers</h1></div>
        <div class='col-lg-3'></div>
    </div>
   
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">matricule</th>
                <th scope="col">Nom complet</th>
                <th scope="col">Date de Naissance</th>
                <th scope="col">Salaire</th>
                <th scope="col">Service</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        {% for employer in employers %}
            <tbody>
                <tr>
                    <td>{{employer.matricule}}</td>
                    <td>{{employer.nom}}</td>
                    <td>{{employer.datenaiss|date('d-M-Y')}}</td>
                    <td>{{employer.salaire}}.Fcfa</td>
                    <td>{{employer.service.libelle}}</td>
                    <td><a href="{{employer.id}}/edit"><i class="fas fa-user-edit"></i></a></td>
                    <td><a href="{{employer.id}}/supp"><i class="fas fa-trash"></i></a></td>
                </tr>  
        {% endfor %}

            </tbody>                                
    </table>
   
  
{% endblock %}

{% block javascripts %}
 <script>
    $(document).ready(function(){
        $('#tableau').DataTable();
    });
</script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://kit.fontawesome.com/2989b05da4.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
       
{% endblock %}





